{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}